id: {{ id }} </br>
name: {{ name }} {{ surname }} </br>
email: {{ email }}

<div class='form-group'>
  <div class="input-group">
    <input id='user-id' type='hidden'/>
  </div>
</div>

<div class='form-group'>
  <label class="control-label" for="user-name">Name</label>
  <input id='user-name' type='text' class='form-control' placeholder='user 
name' value="{{ name }}" /> 
  <span class='validation-error'></span>
</div>

<div class='form-group'>
  <label class="control-label" for="user-surname">Surname</label>
  <input id='user-surname' type='text' class='form-control' 
placeholder='user surname' value="{{ surname }}" /> 
  <span class='validation-error'></span>
</div>

<div class='form-group'>
  <label class="control-label" for="user-email">email</label>
  <input id='user-email' type='text' class='form-control' 
placeholder='email' value="{{ email }}" />
  <span class='validation-error'></span>
</div>

<button class='btn btn-submit' %>Save</button> 